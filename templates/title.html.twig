{% extends 'base.html.twig' %}
{% block main_class %}title{% endblock %}
{% block header_class %}title{% endblock %}
{% block content %}
    <section class="main-title">
        <div class="main-title-wrapper">
            <h1>Портал для тестирования</h1>
            <h2>Портал для тестирования на базе Усть-Каменогорского высшего политехнического колледжа</h2>
        </div>
    </section>
    <section class="olympics">
        <ul class="olympic-list">
            {% for olympic in olympics %}
                {% include 'olympic/__olympic.li.html.twig' with {olympic:olympic} %}
            {% endfor %}
        </ul>
         {% if count > olympics|length  %}
        <div class="all-olympics"><a href="{{ path('olympic_index') }}">Посмотреть список всех олимпиад</a></div>
         {% endif %}
    </section>
{% endblock %}