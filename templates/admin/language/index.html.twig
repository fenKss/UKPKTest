{% extends 'admin/base.html.twig' %}

{% block title %}Языки{% endblock %}
{% block boxTitle %}Список языков{% endblock %}

{% block boxButtons %}
    <a href="{{ path('language_new') }}" class="btn btn-sm btn-primary"><i class="fa fa-plus"></i></a>
{% endblock %}

{% block boxBody %}

    <table class="table">
        <thead>
        <tr>
            <th>id</th>
            <th>Название</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for language in languages %}
            <tr>
                <td>{{ language.id }}</td>
                <td>{{ language.name }}</td>
                <td>
                    <a href="{{ path('language_show', {'id': language.id}) }}">Показать</a>
                    <a class="btn-sm btn-primary" href="{{ path('language_edit', {'id': language.id}) }}"><i class="fa fa-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
