{% extends 'admin/base.html.twig' %}

{% block title %}Олимпиады{% endblock %}
{% block subtitle %}Список{% endblock %}
{% block boxTitle %}Список олимпиад{% endblock %}
{% block boxButtons %}
    <a href="{{ path('admin_olymp_new') }}" class="btn btn-sm btn-primary"><i class="fa fa-plus"></i></a>
{% endblock %}
{% block boxBody %}

    <table class="table">
        <thead>
            <tr>
                <th>id</th>
                <th>Название олимпиады</th>
                <th>Тип</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for olymp in olymps %}
            <tr>
                <td>{{ olymp.id }}</td>
                <td>{{ olymp.name }}</td>
                <td>{{ olymp.type }}</td>
                <td class="btn-group">
{#                    <a href="{{ path('admin_olymp_show', {'id': olymp.id}) }}">show</a>#}
                    <a class="btn btn-sm btn-primary" href="{{ path('admin_olymp_edit', {'id': olymp.id}) }}"><i class="fa fa-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Олимпиады не найдены</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_olymp_new') }}">Create new</a>
{% endblock %}
