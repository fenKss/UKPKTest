{% extends 'admin/base.html.twig' %}

{% block title %}Олимпиады{% endblock %}
{% block subtitle %}{% endblock %}
{% block boxTitle %}Список олимпиад{% endblock %}
{% block boxButtons %}
    <a href="{{ path('admin_olympic_new') }}" class="btn btn-sm btn-primary"><i class="fa fa-plus"></i></a>
{% endblock %}
{% block boxBody %}

    <table class="table">
        <thead>
        <tr>
            <th>id</th>
            <th>Название олимпиады</th>
            <th>Языки</th>
            <th>Тип</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for olympic in olympics %}
            <tr>
                <td>{{ olympic.id }}</td>
                <td>{{ olympic.name }}</td>
                <td>
                    {% for language in olympic.languages %}
                        <span>{{ language.name }}</span>
                    {% endfor %}
                </td>
                <td>{{ olympic.type }}</td>
                <td class="btn-group">
                    {# <a href="{{ path('admin_olympic_show', {'id': olympic.id}) }}">show</a> #}
                    <a class="btn btn-sm btn-primary" href="{{ path('admin_olympic_edit', {'id': olympic.id}) }}">
                        <i class="fa fa-edit"></i>
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Олимпиады не найдены</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
