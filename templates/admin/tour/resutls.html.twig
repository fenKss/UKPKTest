{% extends 'admin/base.html.twig' %}

{% block title %}
    Результаты тура
{% endblock %}

{% block boxTitle %}
    <div class="about">
        <div class="olympic-name title">
            Олимпиада: <span>{{ tour.olympic.name }}</span>
        </div>
        <div class="tour-name title">
            Тур: <span>{{ tour.tourIndex }}</span>
        </div>
        <div>
            Максимальное колличество баллов: <span>{{ correctCount }}</span>
        </div>

    </div>
{% endblock %}
{% block boxBody %}

    <table class="table tab-content">
        <tr>
            <th>Место</th>
            <th>Имя</th>
            <th>Колличество баллов</th>
        </tr>

        {% for key,users in usersAnswers %}
            {% set index = loop.index %}
            {% for user in users %}
                <tr>
                    <td>{{ index }}</td>
                    <td>{{ user.name }} {{ user.surname }}</td>
                    <td>{{ key }}</td>
                </tr>
            {% endfor %}
        {% endfor %}
    </table>
{% endblock %}

