{% extends 'admin/base.html.twig' %}


{% block title %}Tour{% endblock %}

{% block body %}
    <h1>Tour</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tour.id }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ tour.price }}</td>
            </tr>
            <tr>
                <th>IsValid</th>
                <td>{{ tour.isValid ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>StartedAt</th>
                <td>{{ tour.startedAt ? tour.startedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>ExpiredAt</th>
                <td>{{ tour.expiredAt ? tour.expiredAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_tour_index') }}">back to list</a>

    <a href="{{ path('admin_tour_edit', {'id': tour.id}) }}">edit</a>

    {{ include('admin/tour/_delete_form.html.twig') }}
{% endblock %}
